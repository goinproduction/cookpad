<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surfaceColorPrimary">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/search_searchfail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/search_searchfail_toolbar_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:src="@drawable/ic_back_black"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="12dp" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/search_searchfail_image_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_searchfail_toolbar"
        android:src="@drawable/ic_baseline_error_24" />

    <TextView
        android:id="@+id/search_searchfail_text_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không tìm thấy kết quả nào!"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/search_searchfail_image_fail"
        app:layout_constraintStart_toStartOf="@+id/search_searchfail_image_fail"
        app:layout_constraintTop_toBottomOf="@+id/search_searchfail_image_fail" />


</androidx.constraintlayout.widget.ConstraintLayout>